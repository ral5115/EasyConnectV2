<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:Core="clr-namespace:EasyTools.Framework.UI"
    xmlns:tk="http://schemas.telerik.com/2008/xaml/presentation">
    <Style TargetType="{x:Type Core:FormTitle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Core:FormTitle}">
                    <StackPanel Focusable="False">
                        <TextBlock Focusable="False" Style="{DynamicResource TextBlockTitleStyle}" Text="{TemplateBinding Title}"/>
                        <Rectangle Focusable="False" Style="{DynamicResource RectangleLineStyle}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
